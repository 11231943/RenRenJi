                    android:textColor="#000"
                    android:textSize="13sp"
                    tools:text="justin zhang" />

                <TextView
                    android:id="@+id/engineer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="91dp"
                    android:layout_toRightOf="@+id/engineer_name"
                    android:textColor="#000"
                    android:textSize="13sp"
                    tools:text="高级检测工程师" />

                <TextView
                    android:id="@+id/engineer_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="111dp"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="六年手机检测经验" />

                <TextView
                    android:id="@+id/testing_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="156dp"
                    android:layout_marginRight="26dp"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="3"
                    android:text="经我检测：该机器全功能正常，外观和屏幕有轻微的使用痕迹，电池损耗正常，有人人机360天质保保修，整机评估成色99新，极具性价比。"
                    android:textColor="#333"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/testing_chengse"
                    android:layout_width="143dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="375dp"
                    android:layout_marginRight="8dp"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="4"
                    android:text="无使用痕迹，外观无磨损划伤，屏幕显示正常，功能正常，电池损耗正常。"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/chengse"
                    android:layout_width="143dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="345dp"
                    android:layout_toRightOf="@+id/testing_chengse" />


            </RelativeLayout>

            <View
                android:id="@+id/line_5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/detail_layout"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/boss_content"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/line_5">

                <ImageView
                    android:id="@+id/boss_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/boss_icon" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/boss_icon"
                    android:text="人人机创始人微信号：13332959300"
                    android:textColor="#333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone"
