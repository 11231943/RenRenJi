<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view_pager_layout"
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <com.trade.rrenji.utils.LoopViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.viewpagerindicator.CirclePageIndicator xmlns:indicator="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:padding="5dp"
                    indicator:radius="5dp"
                    indicator:fillColor="#FFF"
                    indicator:gapWidth="4dp"
                    indicator:pageColor="#80ffffff"
                    indicator:selectedColor="#FFF"
                    indicator:strokeWidth="0dp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/new_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_pager_layout"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7dp"
                android:paddingLeft="10dp"
                android:src="@drawable/icon_nine_new" />

            <TextView
                android:id="@+id/goods_detail_detail_param_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_pager_layout"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/new_status"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="95新 iphone 6 16G白" />

            <LinearLayout
                android:id="@+id/goods_detail_detail_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_detail_detail_param_name"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_detail_detail_param_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="@color/red"
                    android:textSize="32sp"
                    android:visibility="visible"
                    tools:text="$1699" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_detail_detail_param_name"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:text="原价"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/price_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_detail_detail_param_name"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="2dp"
                    android:textColor="#666"
                    android:textSize="15sp"
                    android:visibility="visible"
                    tools:text="$1699" />


                <TextView
                    android:id="@+id/price_jieyue_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_detail_detail_param_name"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/icon_save_price"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="2000"
                    android:textColor="#333"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/goods_detail_detail_param_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_detail_detail_price_layout"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#898989"
                android:textSize="12sp"
                tools:text="网络:移动4G 联通4G 电信4G" />

            <TextView
                android:id="@+id/goods_detail_detail_param_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_detail_detail_param_net"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="版本:国行"
                android:textSize="12sp" />

            <View
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/goods_detail_detail_param_version"
                android:layout_marginTop="8dp"
                android:background="#f5f5f5" />

            <LinearLayout
