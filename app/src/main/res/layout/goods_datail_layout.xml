                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/temp1"
                        android:layout_width="11dp"
                        android:layout_height="10dp"
