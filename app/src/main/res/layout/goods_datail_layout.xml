                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one_base_layout"
                android:layout_marginTop="19dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有无卡贴"
                        android:textColor="#666"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="13sp"
                        tools:text="无卡贴" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.34"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有无进水"
                        android:textColor="#666"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/inlet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="13sp"
                        tools:text="无进水" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="版本"
                        android:textColor="#666"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="国行"
                        android:textColor="#000"
                        android:textSize="13sp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/line_3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/two_base_layout"
                android:layout_marginTop="14dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/goods_detail_detail_param"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@+id/line_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="查看该机配置"
                    android:textColor="#000"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/more_icon" />

            </RelativeLayout>

            <View
                android:id="@+id/line_4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/goods_detail_detail_param"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/detail_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_4"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
