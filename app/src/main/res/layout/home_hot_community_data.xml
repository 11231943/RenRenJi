<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/hot_iphone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="人人社区"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hot_iphone_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="手机问题，来这里找答案 "
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="15dp"
        android:text="更多 >"
        android:textColor="#000"
        android:textSize="11sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_optimzation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/hot_iphone_desc"
        android:layout_marginTop="30dp"/>
</RelativeLayout>