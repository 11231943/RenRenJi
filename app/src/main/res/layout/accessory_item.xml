<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="115dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/accessory_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/accessory_text"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accessory_image"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="原装耳机（3.5mm）"
        android:textColor="#000000"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/accessory_price"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accessory_text"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="￥88"
        android:textColor="#e8391e"
        android:textSize="15sp" />

</RelativeLayout>