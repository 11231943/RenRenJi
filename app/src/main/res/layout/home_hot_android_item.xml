<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hot_data_image"
        android:layout_width="115dp"
        android:layout_centerVertical="true"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/hot_iphone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/hot_data_image"
        android:text="华为HUAWEI Mate20 pro 128G plus "
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/hot_iphone_image"
        android:layout_width="31dp"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/hot_data_image"
        android:src="@drawable/icon_nine_nine" />

    <TextView
        android:id="@+id/phone_size"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/hot_iphone_image"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="128G"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_color"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/phone_size"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="黑色"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_net"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/iphone_color"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="全网通"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/hot_data_image"
        android:text="￥3599"
        android:textColor="#e8391e"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/iphone_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_image"
        android:layout_alignBaseline="@+id/iphone_price"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iphone_price"
        android:text="￥6599"
        android:textColor="#999999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_save_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_image"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@+id/iphone_original_price"
        android:background="@drawable/icon_save_price"
        android:paddingLeft="18dp"
        android:text="3099"
        android:textColor="#000000"
        android:textSize="9sp" />

    <LinearLayout
        android:id="@+id/pay_type"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iphone_price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/hot_data_image"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_huabei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="花呗分期"
            android:textColor="#000000"
            android:textSize="7sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_baitiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="白条分期"
            android:textColor="#000000"
            android:textSize="7sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_zuhe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="组合支付"
            android:textColor="#000000"
            android:textSize="7sp" />

    </LinearLayout>

    <View
        android:layout_toRightOf="@+id/hot_data_image"
        android:layout_below="@+id/pay_type"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="10dp"
        android:layout_height="1dp"
        android:background="#dfdfdf"/>

</RelativeLayout>