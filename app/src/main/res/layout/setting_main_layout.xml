<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/bind_wchat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/user_rule"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="绑定微信"
            android:textColor="#333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/icon_go"
            android:src="@drawable/icon_setting_wechat" />

        <ImageView
            android:id="@+id/icon_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/icon_go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#eee" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/bind_wchat"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="清楚缓存"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:text="23M" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/about_version"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/clear_cache"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="最新版本"
            android:textColor="#333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:text="v 3.1.0" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_out"
        android:layout_marginBottom="81dp"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_out_btn_bg"
        android:gravity="center"
        android:text="退出登录" />
</RelativeLayout>