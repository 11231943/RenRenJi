<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hot_iphone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="人人之家"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hot_iphone_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="手机问题，来这里找答案 "
        android:textColor="#999999"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="15dp"
        android:text="更多 >"
        android:textColor="#000"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/renren_iamge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="27dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/hot_iphone_desc"
        android:layout_height="157dp" />

    <TextView
        android:layout_marginLeft="14dp"
        android:id="@+id/hot_renren_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/renren_iamge"
        android:text="深圳福田区人人之家旗舰店"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hot_renren_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_renren_text"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="这是小米上市港交所之前公开募股时，雷军发表的公开信中所阐述的小
米硬件产品的愿景，或者说是小米自己努力的方向。"
        android:textColor="#999999"
        android:textSize="11sp" />

</RelativeLayout>