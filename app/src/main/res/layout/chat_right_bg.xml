<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/user_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:src="@drawable/user_head_default_gray" />

    <TextView
        android:id="@+id/user_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/user_avatar"
        tools:text="15986800825" />

    <TextView
        android:id="@+id/content"
        android:minHeight="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_account"
        android:layout_marginLeft="75dp"
        android:layout_toLeftOf="@+id/user_avatar"
        android:background="@drawable/ease_chatto_bg_focused"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:lineSpacingExtra="4dp"
        tools:text="你好，请问一下一加pro 128 请问一下一加pro 128" />


</RelativeLayout>