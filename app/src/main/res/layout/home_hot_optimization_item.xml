<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="115dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hot_data_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/hot_iphone_text"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hot_data_image"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="HUAWEI Mate20 pro 128G plus "
        android:textColor="#000000"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/phone_size"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="128G"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_color"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/phone_size"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="黑色"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_net"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@+id/hot_iphone_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/iphone_color"
        android:background="@drawable/home_tag_bg"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="全网通"
        android:textColor="#5a595e"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/iphone_price"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_size"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="￥3599"
        android:textColor="#e8391e"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iphone_price"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_fenqi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="花呗分期"
            android:textColor="#000000"
            android:textSize="7sp" />


    </LinearLayout>

</RelativeLayout>