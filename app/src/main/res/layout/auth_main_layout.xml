<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:id="@+id/bind_wechat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/user_rule"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="绑定微信"
            android:textColor="#333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/icon_go"
            android:src="@drawable/icon_setting_wechat" />

        <ImageView
            android:id="@+id/icon_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/icon_go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="#eee" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bind_zfb"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/user_rule"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="支付宝认证"
            android:textColor="#333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_setting_zfb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:layout_toLeftOf="@+id/icon_zfb_go"
            android:src="@drawable/icon_setting_zfb" />

        <ImageView
            android:id="@+id/icon_zfb_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/icon_go" />

    </RelativeLayout>

</LinearLayout>