<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_group"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/content_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/actionbar_bg"
        android:layout_height="@dimen/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_height="48dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="48dp"
                    android:textSize="9sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/c444"
                    android:gravity="center"
                    android:text="客服"
                    android:drawableTop="@drawable/goods_im"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/search_layout"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/home_search_bg"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/c444"
                    android:gravity="center"
                    android:hint="iPhone XS Max"
                    android:layout_height="25dp" />

                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/search_icon"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="48dp"
                    android:textSize="9sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/c444"
                    android:gravity="center"
                    android:text="更多"
                    android:drawableTop="@drawable/icon_copy"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:visibility="gone"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="@drawable/actionbar_bg">

        <TextView
            style="@style/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="首页" />
    </android.support.v7.widget.Toolbar>
    <com.gelitenight.superrecyclerview.SuperRecyclerView
        android:id="@+id/near_recycler_view"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    </com.gelitenight.superrecyclerview.SuperRecyclerView>

</LinearLayout>