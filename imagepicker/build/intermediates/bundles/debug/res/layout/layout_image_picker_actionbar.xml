<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/imagepicker_actionbar_height"
             android:background="@drawable/actionbar_bg">

    <TextView
        android:id="@+id/tv_imagepicker_actionbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/c444"
        android:textSize="@dimen/imagepicker_title_size"/>

    <TextView
        android:id="@+id/tv_imagepicker_actionbar_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_horizontal"
        android:gravity="center"
        android:paddingLeft="@dimen/imagepicker_padding"
        android:paddingRight="@dimen/imagepicker_padding"
        android:text="预览"
        android:textColor="#999"
        android:textSize="@dimen/imagepicker_text_size"/>

    <TextView
        android:id="@+id/tv_imagepicker_actionbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_horizontal"
        android:background="@drawable/imagepicker_actionbar_menu_selector"
        android:drawableLeft="@drawable/back_btn"
        android:gravity="center"
        android:paddingLeft="@dimen/imagepicker_padding"
        android:paddingRight="@dimen/imagepicker_padding"
        android:text="返回"
        android:textColor="#444"
        android:textSize="@dimen/imagepicker_text_size"/>
</FrameLayout>